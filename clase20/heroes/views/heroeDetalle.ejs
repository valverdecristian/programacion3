<!DOCTYPE html>
<html lang="es">

<%- include("partials/head") %>

<body>
    <%- include("partials/navbar") %>
    <div class="container">
        <h1 class="my-4"><%= heroe.nombre %></h1>
        <div class="row">
            <div class="col-md-4">
                <img src="<%= heroe.img %>" alt="<%= heroe.nombre %>" class="img-fluid">
            </div>
            <div class="col-md-8">
                <p><strong>Profesión:</strong> <%= heroe.profesion %></p>
                <p><strong>País:</strong> <a href="/heroes/pais/<%= heroe.pais %>"><%= heroe.pais %></a></p>
                <p><strong>Reseña:</strong> <%= heroe.resenia %></p>
            </div>
        </div>
    </div>
    <%- include("partials/scripts") %>
</body>

</html>
